<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{100} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.noveria.absencemanagement.service.department.DepartmentService" level="DEBUG"/>
    <logger name="com.noveria.absencemanagement.view.department.controller.DepartmentController" level="DEBUG"/>
    <logger name="com.noveria.absencemanagement.model.department.dao.DepartmentDAO" level="DEBUG" />

    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>