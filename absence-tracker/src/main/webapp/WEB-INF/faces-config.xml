<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
          http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
              version="2.1">

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>


    <!-- navigation-rule for login.xhtml -->
    <navigation-rule>
        <from-view-id>/pages/unsecure/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{authController.login}</from-action>
            <from-outcome>correct</from-outcome>
            <to-view-id>/pages/secure/dashboard.xhtml</to-view-id>
           <!-- <redirect/> -->
        </navigation-case>
        <navigation-case>
            <from-action>#{authController.login}</from-action>
            <from-outcome>incorrect</from-outcome>
            <to-view-id>/pages/unsecure/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/secure/dashboard.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{authController.logout}</from-action>
            <from-outcome>logout</from-outcome>
            <!-- <to-view-id>/j_spring_security_logout?faces-redirect=true</to-view-id>-->
            <to-view-id>/pages/unsecure/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


</faces-config>