<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
          http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
              version="2.1">

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>

    <!-- navigation-rule for login.xhtml -->
    <navigation-rule>
        <from-view-id>/pages/unsecure/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{authController.login}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/secure/welcome.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{authController.login}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/pages/unsecure/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/secure/welcome.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{authController.logout}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/unsecure/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showAdminFeatures}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/secure/admin/admin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showHolidayManagementFeatures}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/secure/holiday/management.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showConfirmAbsenceFeatures}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/secure/absence/confirmation.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showEnterAbsenceFeatures}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/secure/absence/management.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showHolidayAuthoriseFeatures}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/secure/holiday/authorise.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/secure/admin/admin.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{authController.logout}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/unsecure/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showHolidayAuthoriseFeatures}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/secure/holiday/authorise.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


    <navigation-rule>
        <from-view-id>/pages/secure/holiday/management.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{authController.logout}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/unsecure/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showHolidayAuthoriseFeatures}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/secure/holiday/authorise.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showHolidayManagementFeatures}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/secure/holiday/management.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/secure/holiday/authorise.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{authController.logout}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/unsecure/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showHolidayManagementFeatures}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/secure/holiday/management.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/secure/absence/management.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{authController.logout}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/unsecure/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showHolidayAuthoriseFeatures}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/secure/holiday/authorise.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showHolidayManagementFeatures}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/secure/holiday/management.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/secure/absence/confirmation.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{authController.logout}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/unsecure/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showHolidayManagementFeatures}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/secure/holiday/authorise.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


</faces-config>